redgreen() { gawk '
     /^---/ {        $0="\033[01;36m"$0"\033[0m" }
     /FAIL/ { bad++; $NF="\033[31m"$NF"\033[0m" }
     /PASS/ {        $NF="\033[32m"$NF"\033[0m" }
            { print  $0                 }
     END    { exit bad!=0 }'
}

if [ "$1" == "-T" ]; then
  date +"%r"
  echo -e "\e[1m\e[30m"
  art | gawk '
   BEGIN {srand('$RANDOM'); RS="";FS=""}
         {N[rand()] = $0}
   END   {for(i in N) { print N[i]; break}}'
  echo -e "\033[0m" 
  #date +"%H %M %S" |figlet -f big
  python3 -m bnbad2 -T | redgreen
  exit $?
fi

